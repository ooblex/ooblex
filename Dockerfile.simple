# Simple Dockerfile for Ooblex Zero-Friction Demo
# Uses brain_simple.py with OpenCV effects (no AI models required)

FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for OpenCV
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    opencv-python-headless==4.8.1.78 \
    numpy==1.24.3 \
    redis==5.2.1 \
    pika==1.3.2 \
    websockets==14.1 \
    aiohttp==3.13.3 \
    python-multipart==0.0.18

# Copy code directory
COPY code/ /app/code/
COPY html/ /app/html/

# Default command (override in docker-compose.yml)
CMD ["python3", "/app/code/brain_simple.py"]

# Ooblex NinjaSDK Integration Environment Variables

# ============================================================================
# NinjaSDK Audio Service Configuration
# ============================================================================
NINJASDK_HOST=wss://wss.vdo.ninja
NINJASDK_ROOM=ooblex-audio
NINJASDK_PASSWORD=

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# RabbitMQ Configuration
# ============================================================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# ============================================================================
# Whisper STT Configuration
# ============================================================================
WHISPER_MODEL=base                    # Options: tiny, base, small, medium, large
WHISPER_DEVICE=auto                   # Options: auto, cpu, cuda
WHISPER_COMPUTE_TYPE=default          # Options: default, int8, float16
WHISPER_CACHE_DIR=/tmp/whisper        # Model cache directory

# ============================================================================
# LLM Configuration
# ============================================================================
LLM_BACKEND=mock                      # Options: ollama, transformers, llamacpp, mock
LLM_MODEL=llama2                      # Model name (depends on backend)
LLM_MAX_TOKENS=256                    # Maximum tokens to generate
LLM_TEMPERATURE=0.7                   # Temperature for generation
LLM_CONTEXT_LENGTH=5                  # Number of conversation turns to keep
LLM_SYSTEM_PROMPT="You are a helpful AI assistant integrated into Ooblex."

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info                        # Options: debug, info, warn, error

# ============================================================================
# Performance Tuning
# ============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_DURATION_MS=1000
AUDIO_FORMAT=pcm16

# Ooblex Environment Configuration
# Copy this file to .env and adjust values as needed

# Core Services
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# API Configuration
API_PORT=8800
API_HOST=0.0.0.0
LOG_LEVEL=info

# Domain (for SSL certificates)
DOMAIN=localhost

# ML Worker Configuration
MODEL_PATH=./models
WORKER_COUNT=2

# GPU Configuration (optional)
# Set to GPU ID (0, 1, etc.) or -1 for CPU
CUDA_VISIBLE_DEVICES=-1

# Performance Tuning
REDIS_MAX_FRAMES=100
FRAME_TTL_SECONDS=30
WORKER_BATCH_SIZE=1
MAX_QUEUE_SIZE=1000

# WebRTC Configuration
WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302
# WEBRTC_TURN_SERVER=turn:your-turn-server:3478
# WEBRTC_TURN_USERNAME=username
# WEBRTC_TURN_PASSWORD=password

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=false

# Security
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secret-key-here-change-in-production
SSL_CERT_PATH=/etc/letsencrypt/live/
SSL_KEY_PATH=/etc/letsencrypt/live/

# Database (if using API with persistence)
DATABASE_URL=postgresql://ooblex:password@localhost:5432/ooblex

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_RATE_LIMITING=true

# Development
DEBUG=false
TESTING=false
